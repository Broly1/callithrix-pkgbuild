# Maintainer: Erik Dubois <erik.dubois@gmail.com>
pkgname=buildra-system-installation
_pkgname=buildra-system-installation
_destname1="/etc"
_destname2="/usr"
pkgver=25.06
pkgrel=02
pkgdesc="system installation config for buildra"
arch=('any')
url="https://github.com/buildra/${_pkgname}"
license=('GPL3')
makedepends=('git')
depends=()
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(${_pkgname}::"git+$url")
sha256sums=('SKIP')
install='readme.install'
package() {
	mkdir -p "${pkgdir}${_destname1}"
	cp -r "${srcdir}/${_pkgname}/${_destname1}"* "${pkgdir}"
	mkdir -p "${pkgdir}${_destname2}"
	cp -r "${srcdir}/${_pkgname}/${_destname2}"* "${pkgdir}"
}
